[config]
name=Default CHM Template
category=CHM Documentation
extension=chm
topicextension=htm
linkformattopic=%helpid%.htm
linkformatanchor=%helpid%.htm#%anchorname%

[var_BaseColor]
name=Base color
name.fr=Couleur de base
name.de=Grundfarbe
name.es=Color de base
description=Customize the documentation's base color.
description.fr=Personnaliser la couleur de base de la documentation.
description.de=Festlegen der Grundfarbe der Dokumentation.
description.es=Personalizar el color de base de la documentación.
kind=color
default=#EFEFEF

[var_ShowBreadCrumbs]
name=Show BreadCrumbs
name.fr=Afficher le cheminement
name.de=Brotkrümelnavigation
name.es=Mostrar breadcrumbs
description=Show the breadcrumbs at the top of each topic bellow the topic title.
description.fr=Afficher le cheminement au haut de chaque chapitre en dessous du titre du chapitre.
description.de=Brotkrümelnavigation über jedem Kapitel/Thema unterhalb des Titels anzeigen.
description.es=Mostrar breadcrumbs en la parte superior de cada tema bajo el título del tema.
kind=bool
default=1

[var_ShowNavigation]
name=Show navigation arrows
name.fr=Afficher les flèches de navigation
name.de=Navigationspfeile anzeigen
name.es=Mostrar flechas de navegación
description=Show the navigation arrows at the top of each topic right of the topic title.
description.fr=Afficher les flèches de navigation en haut de chaque chapitre à droite du titre du chapitre.
description.de=Navigationspfeile über jedem Kapitel/Thema auf der rechten Seite des Titels anzeigen.
description.es=Mostrar las flechas de navegación en la parte superior de cada tema a la derecha del título del tema.
kind=bool
default=1

[var_UseCharsetForTopics]
name=Use project charset for topics
name.fr=Utiliser le charset du projet
name.de=Benutzen Sie den Projektzeichensatz für Kapitel/Themen
name.es=Usar conjunto de caracteres del proyecto para los temas
description=Use the project encoding to generate topics instead of UTF-8. Useful when some characters appear broken in the CHM search result list.
description.fr=Utiliser l'encodage du projet pour générer les chapitres au lieu de l'UTF-8. Utile lorsque certains caractère apparaissent cassés dans les résultats de recherche CHM.
description.de=Benutzen Sie den Projektzeichensatz an Stelle von UTF-8. Dies ist nützlich, wenn einige Zeichen in der CHM-Suchergebnisliste defekt erscheinen.
description.es=Usar la codificación del proyecto para generar temas en vez de UTF-8. Esto es útil cuando ciertos caracteres aparecen rotos en la lista de resultados de la búsqueda CHM.
kind=bool
default=0

[var_IECompatibilityMode]
name=Internet Explorer compatibility
name.fr=Compatibilité Internet Explorer
name.de=Internet-Explorer-Kompatibilität
name.es=Compatibilidad con Internet Explorer
description=Choose which version of Internet Explorer is used to display topics. This might be limited based on OS version.
description.fr=Indiquer la version d'Internet Explorer utilisée pour afficher les chapitres. Peut être limité en fonction de la version de l'OS.
description.de=Wählen Sie die Internet-Explorer-Version, die zum Anzeigen von Themen verwendet wird. Dies kann auf Grund der Betriebssystemversion begrenzt sein.
description.es=Escoger la versión de Internet Explorer utilizada para mostrar los temas. Esto podría verse limitado dependiendo de la versión de SO.
kind=enum
values=System default|IE=edge|IE=11|IE=9|IE=8|IE=7|IE=6|IE=5
default=IE=edge

[var_CustomCss]
name=Custom CSS
name.fr=CSS Personnalisé
name.de=Benutzerdefinierte CSS
name.es=CSS Personalizado
kind=memo
description=Specify custom CSS to customize the generated HTML content.
description.fr=Indiquer le code CSS à utiliser pour personnaliser le contenu HTML généré.
description.de=Geben Sie benutzerdefinierte CSS zum Anpassen der generierten HTML-Inhalte an.
description.es=Especificar CSS personalizado para personalizar el contenido HTML generado.

[var_CustomJs]
name=Custom JavaScript
name.fr=JavaScript Personnalisé
name.de=Benutzerdefinierte JavaScript
name.es=JavaScript Personalizado
kind=memo
description=Specify custom JavaScript to customize the generated HTML content.
description.fr=Indiquer le code JavaScript à utiliser pour personnaliser le contenu HTML généré.
description.de=Geben Sie benutzerdefinierte JavaScript zum Anpassen der generierten HTML-Inhalte an.
description.es=Especificar JavaScript personalizado para personalizar el contenido HTML generado.

[var_Footer]
name=Footer (HTML)
name.fr=Pied-de-page (HTML)
name.de=Fußzeile (HTML)
name.es=Pie de página (HTML)
kind=memo
description=Specify the HTML content of the footer displayed at the bottom of each page.
description.fr=Indiquer le contenu HTML du pied-de-page affiché au bas de chaque page.
description.de=Geben Sie den HTML-Inhalt der Fußzeile an, die unten auf jeder Seite dargestellt wird.
description.es=Especificar el contenido HTML del pie de página que se muestra en la parte inferior de cada página.